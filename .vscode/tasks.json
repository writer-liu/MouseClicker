{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake -S . -B build",
            "group": "build",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake --build build",
            "group": "build",
            "dependsOn": ["CMake Configure"],
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run MouseClicker",
            "type": "shell",
            "command": ".\\build\\MouseClicker.exe",
            "group": "test",
            "dependsOn": ["CMake Build"]
        }
    ]
}